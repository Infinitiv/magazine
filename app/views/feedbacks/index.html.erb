<%= link_to t(:feedbacks, scope: [:layout, :common]), new_feedback_path, class: "small button" %>
<dl>
  <% @feedbacks.each do |feedback| %>
    <div class="panel<%= " pink" unless feedback.public %>">
    <dt><%= feedback.question %>
    <dd><%= markdown feedback.answer if feedback.answer %>
    </div>
    <% if @editor_permission %>
      <div>
        <ul class="button-group">
          <li><%= link_to 'Edit', edit_feedback_path(feedback), class: "small button" %>
          <li><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' }, class: "small button alert" %>
        </ul>
      </div>
    <% end %>
  <% end %>
</dl>


