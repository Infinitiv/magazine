<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title_ru %><br>
    <%= f.text_area :title_ru %>
  </div>
  <div class="field">
    <%= f.label :title_en %><br>
    <%= f.text_area :title_en %>
  </div>
  <div class="field">
    <%= f.label :cut_content_ru %><br>
    <%= f.text_area :cut_content_ru %>
  </div>
  <div class="field">
    <%= f.label :cut_content_en %><br>
    <%= f.text_area :cut_content_en %>
  </div>
  <div class="field">
    <%= f.label :content_ru %><br>
    <%= f.text_area :content_ru %>
  </div>
  <div class="field">
    <%= f.label :content_en %><br>
    <%= f.text_area :content_en %>
  </div>
  <div class="field">
    <%= f.label :article_type_id %><br>
    <%= f.select :article_type_id, options_for_select= @article_types.collect {|p| [t(p.name, :scope => [:article_types]), p.id] }, {:include_blank => ''} %>
  </div>
  <div class="field">
    <%= f.label :expire %><br>
    <%= f.date_select :expire, {:include_blank => ''} %>
  </div>
  <div class="field">
    <%= f.label :published %><br>
    <%= f.check_box :published %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
