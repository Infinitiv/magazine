      <%= f.label :abstract_en, :class => 'right inline'  %>
    </div>
    <div class="small-4 columns">
      <%= f.text_area :abstract_en %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit nil, :class => 'small button' %>
  </div>
<% end %>
</div>
