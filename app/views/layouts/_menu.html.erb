<nav class="top-bar fixed">
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to t(:isma, scope: [:layout, :common]), 'http://isma.ivanovo.ru' %></h1>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="left">
        <% @menus.each do |menu| %>
          <li class="divider"></li>
          <li><%= link_to t(menu.title.to_sym, scope: [:layout, :common]), menu.path + "?locale=#{params[:locale] ? params[:locale] : 'ru'}" %>
        <% end %>
    </ul>
    <ul class="right">
      <li><%= params[:locale] == 'en' ? link_to('Рус', url_for(:locale => :ru)) : link_to('En', url_for(:locale => :en)) %>
      <li class="divider"></li>
      <li><%= @current_user ? link_to(t(:log_out, scope: [:layout, :common]), logout_path) : link_to(t(:sign_in, scope: [:layout, :common]), login_path) %></li>
    </ul>
  </section>
</nav>