<h1>Пользователи</h1>
<table>
  <thead>
    <tr>
      <th>Логин</th>
      <th>Группа</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.login, user_path(user) %></td>
        <td><%= link_to user.group.name, group_path(user.group) %></td>
        <td>
          <%= link_to 'Редактировать', edit_user_path(user), :class => 'small button' %>
          <%= link_to 'Удалить', user_path(user), :method => :delete, :data => { :confirm => 'Уверены?' }, :class => 'small button alert' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Новый', new_user_path, :class => 'small button' %>
